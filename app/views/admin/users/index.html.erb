<h1>Listing users</h1>

<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Registered</th>
        <th>Role</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  <tbody>

    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td><%= link_to 'Edit User', edit_admin_user_path(user), class: 'btn btn-mini' %></td>
      <td><%= link_to 'Delete User', user, method: :delete,  data: { confirm: "You sure?" }, class: 'btn btn-mini' %></td>
    </tr>
  </tbody>
      <% end %>
  </table>

  <br />

  <%= link_to 'New User', new_admin_user_path %>
</div>