<h1>Listing users</h1>

<div class="span8">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%= sortable 'name' %></th>
        <th><%= sortable 'email' %></th>
        <th><%= sortable 'created_at', 'Registered' %></th>
        <th>City</th>
        <th>Role</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  <tbody>

<%= paginate @users %>

    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.place.city unless user.place.nil? %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-mini' %></td>
      <td><%= link_to 'Delete', user, method: :delete,  data: { confirm: "You sure?" }, class: 'btn btn-mini' %></td>
    </tr>

      <% end %>
      </tbody>
  </table>

  <br />

  <%= link_to 'New User', new_admin_user_path %>
</div>