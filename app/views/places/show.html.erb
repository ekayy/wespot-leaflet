

<% provide(:title, @place.business_name) %>
 <!-- <body style="<%= show_user_bg %>"> -->


  <script>
    $(document).ready(function(){
      $(".coverphoto2").backstretch('<%= raw @place.coverphoto_url(:medium).to_s %>');
    });
  </script>

<% content_for :container do %>
<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">
      <!-- <div class="coverphoto2"></div> -->
      <%= render 'follow_form' if signed_in? %>
        <h1 style="display:inline;"><%= @place.business_name %></h1>

            <span><strong><%= @place.followers.count %></strong> followers</span>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">


        <div class="col1">
          <%= render 'twitter' %>
          <%= render 'staticmap' %>
          <%# render 'instagram' %>

        </div>
    </div>

    <div class="span5">
      <div class="col2">

        <%= render 'logos' %>
        <%= render 'recommends' %>
        <%= render 'highlights' %>


      </div>
    </div>

    <div class="span4">
      <div class="col3">

        <%= render 'dishes' %>

      </div>
    </div>
  </div>



  </div>
  <% end %>

